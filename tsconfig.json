{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
